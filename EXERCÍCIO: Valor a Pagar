import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        int codigoPeça1 = scanner.nextInt();
        int quantidadeDePeça1 = scanner.nextInt();
        double valorUnitarioPeça1 = scanner.nextDouble();

        int codigoPeça2 = scanner.nextInt();
        int quantidadeDePeça2 = scanner.nextInt();
        double valorUnitarioPeça2 = scanner.nextDouble();

        double valorTotal = ( quantidadeDePeça1 * valorUnitarioPeça1) + ( quantidadeDePeça2 * valorUnitarioPeça2);

        System.out.printf("VALOR A PAGAR: R$ %.2f%n", valorTotal);
        scanner.close();

    }
}
